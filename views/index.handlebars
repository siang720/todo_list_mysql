<div class="row mt-5">
  <div class="col-md-6 mx-auto">
    <a href="/todos/new" class="btn btn-primary btn-lg btn-block mb-3">Create a new todo</a>
    <ul class="list-group">
      {{#each todos}}
      <li class="list-group-item">
        <div class="row">
          <div class="col-auto mr-auto my-auto">
            <input style="vertical-align: middle;" type="checkbox" name="done" {{#if this.done }} checked{{/if}} />
            <h4 style="display: inline;vertical-align: middle;">{{{this.name}}}</h4>
          </div>
          <div class="col-auto">
            <a href="/todos/{{{this.id}}}" class="mr-3"><i class="fas fa-info-circle fa-2x align-middle"></i></a>
            <a href="/todos/{{{this.id}}}/edit" class="mr-3"><i class="far fa-edit fa-2x align-middle"></i></a>
            <form action="/todos/{{{this.id}}}/delete?_method=DELETE" method="post" style="display:inline">
              <a href="#" onclick="this.parentNode.submit()"><i class="fas fa-trash-alt fa-2x align-middle"></i></a>
            </form>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>