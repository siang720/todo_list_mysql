<div class="row mt-5">
  <div class="col-md-6 mx-auto">
    <form action="/todos/{{{todo.id}}}?_method=PUT" method="POST">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <input type="checkbox" name="done" {{#if todo.done }} checked{{/if}} />
          </div>
        </div>
        <input type="text" placeholder="name" name="name" value="{{{todo.name}}}" class="form-control">
        <div class="input-group-append">
          <a href="#" onclick="this.parentNode.parentNode.parentNode.submit()" class="my-auto ml-3">
            <i class="fas fa-save fa-2x align-middle"></i>
          </a>
        </div>
      </div>
    </form>
    <a href="/" class="btn btn-secondary btn-lg btn-block">Back to Todo List</a>
  </div>
</div>